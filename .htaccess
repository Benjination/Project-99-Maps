# Redirect 404 errors to under-construction page for zone files
<IfModule mod_rewrite.c>
    RewriteEngine On
    
    # Check if the requested file doesn't exist
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    
    # If it's a zone HTML file in any Fashion subdirectory, redirect to under-construction
    # Catches Fashion/OdusHTML/*.html, Fashion/AntonicaHTML/*.html, etc.
    RewriteRule ^Fashion/[^/]+/.*\.html$ Fashion/HTML/under-construction.html [R=302,L]
</IfModule>

# Alternative: ErrorDocument approach
ErrorDocument 404 /Project-99-Maps/Fashion/HTML/under-construction.html
